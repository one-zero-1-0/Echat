describe('E-commerce Hooks Example', () => {
 
  before(() => {
    cy.log('Start E-commerce Test Suite')
  })
 
  beforeEach(() => {
    cy.visit('https://www.demoblaze.com/')
  })
 
  it('should check homepage title', () => {
    cy.title().should('eq', 'STORE')
  })
 
  it('should search product', () => {
    cy.contains('Laptops').click()
    cy.contains('Sony vaio i5').should('be.visible')
  })
 
  afterEach(() => {
    cy.log('One test finished execution')
  })
 
  after(() => {
    cy.log('E-commerce Test Suite Completed')
  })
 
})
