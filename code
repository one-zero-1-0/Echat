describe('Screenshot Example', () => {
  it('takes screenshot of the page', () => {
    cy.visit('https://example.cypress.io')
    cy.screenshot('homepage')
  })
 
  it('takes screenshot of element', () => {
    cy.visit('https://example.cypress.io')
    cy.get('h1').screenshot('header')
  })
})
