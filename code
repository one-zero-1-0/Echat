describe('Cypress Hooking Methods Demo', () => {
 
  // Runs ONCE before all tests
  before(() => {
    cy.log('*** Running BEFORE all tests ***')
  })
 
  // Runs ONCE after all tests
  after(() => {
    cy.log('*** Running AFTER all tests ***')
  })
 
  // Runs before EACH test
  beforeEach(() => {
    cy.visit('https://practicetestautomation.com/practice-test-login/')
    cy.log('*** Opening login page before each test ***')
  })
 
  // Runs after EACH test
  afterEach(() => {
    cy.log('*** Finished executing a test ***')
  })
 
  it('should login with valid credentials', () => {
    cy.get('#username').type('student')
    cy.get('#password').type('Password123')
    cy.get('#submit').click()
    cy.get('h1').should('contain', 'Logged In Successfully')
  })
 
  it('should show error for invalid credentials', () => {
    cy.get('#username').type('wrongUser')
    cy.get('#password').type('wrongPass')
    cy.get('#submit').click()
    cy.get('#error').should('contain', 'Your username is invalid!')
  })
 
})
